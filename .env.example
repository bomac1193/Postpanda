# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Security
SESSION_SECRET=your-session-secret-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# Google OAuth (for user authentication)
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Database
MONGODB_URI=mongodb://localhost:27017/postpilot

# Instagram API Credentials
# Get these from: https://developers.facebook.com/apps/
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/auth/instagram/callback

# TikTok API Credentials
# Get these from: https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:3000/api/auth/tiktok/callback

# OpenAI API (for AI features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic (Claude) API
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Grok / xAI API
# Get your key from: https://console.x.ai (Grok)
GROK_API_KEY=your-grok-api-key-here
# Alias accepted by code:
XAI_API_KEY=your-grok-api-key-here

# Google Cloud Vision API (optional - for advanced image analysis)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=./config/google-cloud-key.json

# Ecosystem Integration (Twin OS)
STARFORGE_API_URL=http://localhost:5000
ECOSYSTEM_API_SECRET=dev-secret-change-in-production

# Approval Gate Enforcement (server-side schedule/publish/post guard)
APPROVAL_GATE_ENFORCED=true
APPROVAL_GATE_STRICT_MODE=true
APPROVAL_GATE_THRESHOLD=70
APPROVAL_GATE_ALLOW_USER_OVERRIDE=true
APPROVAL_GATE_REQUIRE_QUEUE_APPROVAL=false

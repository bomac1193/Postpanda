{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "default": "production"
    },
    "PORT": {
      "description": "Server port",
      "default": "3002"
    },
    "SLAYT_API_KEY": {
      "description": "API key for Boveda integration",
      "generator": {
        "type": "secret"
      }
    },
    "SESSION_SECRET": {
      "description": "Session secret for security",
      "generator": {
        "type": "secret"
      }
    },
    "MONGODB_URI": {
      "description": "MongoDB connection string (add MongoDB service from Railway)",
      "default": "mongodb://localhost:27017/slayt"
    },
    "FRONTEND_URL": {
      "description": "Frontend URL for CORS",
      "default": "https://boveda-studio.vercel.app"
    }
  }
}
